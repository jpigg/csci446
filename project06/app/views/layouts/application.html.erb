<!DOCTYPE html>
<html>
<head>
  <title>Gamez</title>
  <%= stylesheet_link_tag    "application" %>
  <!--javascript_include_tag "application"-->
  <%= csrf_meta_tags %>
</head>
	<body>
		
		<% if false %>
			<%- flash.each do |name, msg| -%>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>
			<%- end -%>
		<% end %>
		
		<div id="user_nav">
			<% if current_user %>
				Logged in as 
				<%= link_to current_user.first_name + " " + current_user.last_name, edit_user_path(:current) %>,
				member. My Games  
				<%= link_to "Logout", logout_path %>
			<% else %>
				<%= link_to "Register", new_user_path %> | 
				<%= link_to "Login", login_path %>
			<% end %>
		</div>
		<br>
		
		<div id="title">
			<%= link_to 'Gamez', root_url %>
		</div>
		
		<%= yield %>

	</body>
</html>
